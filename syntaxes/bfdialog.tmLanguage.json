{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BFDialog",
	"patterns": [
		{
			"begin": "\\$\\{",  
			"end": "\\}",        
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#strings-single"
				},
				{
					"include": "#constants-and-special-vars"
				}
			]
		},
		{
			"begin": "\\@\\{",     
			"end": "\\}",
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#strings-single"
				},
				{
					"include": "#constants-and-special-vars"
				}
			]
		},
		{
			"begin": "\\%\\{",     
			"end": "\\}",
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#strings-single"
				},
				{
					"include": "#constants-and-special-vars"
				}
			]
		},
		{
			"begin": "\\!\\{",
			"end": "\\}",
			"patterns": [
				{
					"include": "#chapter"
				}
			]
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bfdialog",
					"match": "\\b(if|else|reduce|end)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bfdialog",
			"begin": "\"",
			"end": "\""
		},
		"chapter": {
			"name": "support.class.bfdialog",
			"match": "."
		},
		"strings-single": {
			"name": "string.quoted.single.bfdialog",
			"begin": "'",
			"end": "'"
		},
		"constants-and-special-vars": {
			"patterns": [
				{
					"name": "constant.numeric.bfdialog",
					"match": "\\b[+-]?\\d+(\\.\\d+)?\\b"
				},
				{
					"name": "variable.language.bfdialog",
					"match": "\\$\\S+"
				},
				{
					"name": "entity.name.function.bfdialog",
					"match": "\\b(pause|echo|delay|nametag|speed|line|chapter)\\b"
				}
			]
		}
	},
	"scopeName": "source.bfdlg"
}