{
    "scopeName": "source.bfcli",
	"name": "bfcli",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#strings-single"
        },
        {
            "include": "#constants-and-special-vars"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.bfdialog",
                    "match": "(?<=\\s)(if|else|reduce|echo)(?=\\s)"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.bfdialog",
            "begin": "\"",
            "end": "\""
        },
        "strings-single": {
            "name": "string.quoted.single.bfdialog",
            "begin": "'",
            "end": "'"
        },
        "constants-and-special-vars": {
            "patterns": [
                {
                    "name": "constant.numeric.bfdialog",
                    "match": "\\b[+-]?\\d+(\\.\\d+)?\\b"
                },
                {
                    "name": "variable.language.bfdialog",
                    "match": "(?<!\\S)\\$(?!some\\b|none\\b)(\\S+)"
                },
                {
                    "name": "entity.name.function.bfdialog",
                    "match": "(?<=\\s)(pause|delay|nametag|speed|line|chapter|end)(?=\\s)"
                },
				{
					"name": "constant.language.bfdialog",
					"match": "(?:(?<=\\s)|^)\\$(?:some|none)(?=\\s|$)"
				}
            ]
        }
    }
}